<Window x:Class="WpfOBDTest.MainWindow" 
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="Auto" Width="Auto" WindowState="Maximized" ResizeMode="CanResizeWithGrip">
    <Window.Background>
        <!-- Черный фон для всего экрана -->
        <SolidColorBrush Color="Black"/>
    </Window.Background>

    <Grid Margin="10">
        <!-- Рамка с градиентом -->
        <Border BorderBrush="Yellow" BorderThickness="2" Padding="10" CornerRadius="4" Background="Black">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Панель навигации -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch" Margin="0,0,0,20">
                    <Button Content="Dashboard" Click="OpenDashboard" Margin="5" HorizontalAlignment="Stretch" Style="{StaticResource ButtonStyle}"/>
                    <Button Content="Errors" Click="OpenErrors" Margin="5" HorizontalAlignment="Stretch" Style="{StaticResource ButtonStyle}"/>
                    <Button Content="Инфо" Click="ShowInfo" Margin="5" HorizontalAlignment="Stretch" Style="{StaticResource ButtonStyle}"/>
                    <Button Content="Настройки" Click="OpenSettings" Margin="5" HorizontalAlignment="Stretch" Style="{StaticResource ButtonStyle}"/>
                    <Button Content="Статистика" Click="OpenStatistics" Margin="5" HorizontalAlignment="Stretch" Style="{StaticResource ButtonStyle}"/>
                </StackPanel>

                <!-- Информационные данные -->
                <Grid Grid.Row="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,10">
                        <TextBlock Text="Скорость:" FontSize="18" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center"/>
                        <TextBlock Text="{Binding Speed}" FontSize="18" Foreground="White" HorizontalAlignment="Center" Margin="10,0"/>

                        <TextBlock Text="Обороты:" FontSize="18" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center"/>
                        <TextBlock Text="{Binding RPM}" FontSize="18" Foreground="White" HorizontalAlignment="Center" Margin="10,0"/>

                        <TextBlock Text="Температура двигателя:" FontSize="18" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center"/>
                        <TextBlock Text="{Binding EngineTemp}" FontSize="18" Foreground="White" HorizontalAlignment="Center" Margin="10,0"/>

                        <TextBlock Text="Уровень топлива:" FontSize="18" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center"/>
                        <TextBlock Text="{Binding FuelLevel}" FontSize="18" Foreground="White" HorizontalAlignment="Center" Margin="10,0"/>
                    </StackPanel>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</Window>
