<Window x:Class="WpfOBDTest.StatisticsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="StatisticsWindow" Height="Auto" Width="Auto" WindowState="Maximized" ResizeMode="CanResizeWithGrip">
    <Window.Background>
        <SolidColorBrush Color="Black"/>
    </Window.Background>

    <Grid Margin="10">
        <Border BorderBrush="Yellow" BorderThickness="2" Padding="10" CornerRadius="4" Background="Black">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch" Margin="0,0,0,20">
                    <Button Content="Назад" Click="GoBack" Margin="5" HorizontalAlignment="Stretch" Style="{StaticResource ButtonStyle}"/>
                </StackPanel>

                <Grid Grid.Row="1">
                    <TextBlock Text="Статистика" FontSize="24" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</Window>
